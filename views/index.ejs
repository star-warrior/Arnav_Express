  <body>
    <section id="hero" class="container-fluid px-4">
      <div id="navbar">
        <div class="nav-logo">
          <span>Arnav</span>
        </div>
        <div class="nav-item">
          <a>Login</a>
          <a>Jay Mehta</a>
        </div>
      </div>
      <div id="hero-text">
        <h1>
          Making Your Experience <br /> 
          <span id="animate-text">UNFORGETTABLE</span>
        </h1>
        <h3>
          Providing real time beach data to ensure your safety and <br />
          convinience
        </h3>

        <form action="/find" method="post">
          <input type="text" name="place" placeholder="Enter Your Beach Name" />
          <button type="submit">
            <img src="/assets/pics/search.png" alt="Search" />
          </button>
        </form>
        <h3 class="error"> <%= error %></h3>
      </div>
      <div id="credits">
